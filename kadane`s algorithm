class solution{
public:
    // arr: input array
    // n: size of array
    //Function to find the sum of contiguous subarray with maximum sum.
    long long maxSubarraySum(int arr[], int n){
        
        int max=arr[0];
        int cur=0;
        for(int i=0;i<n;i++)
        {
          cur=cur+arr[i];
          if(cur>max)
          max=cur;
          if(cur<0)
          cur=0;
        }
        return max;
    }
};
