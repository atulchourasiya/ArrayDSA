class Solution{
    public:
    long long findMinDiff(vector<long long> a, long long n, long long m)
{
  if(n==0||m==0)
  return 0;
  sort(a.begin(),a.end());
  int j=(m-1);
  int min=INT32_MAX;
   for (int i = 0; i+j < n; i++)
  {
   if(min>(a[i+j]-a[i]))
   min=a[i+j]-a[i];
  }
  return min;
}  
};
